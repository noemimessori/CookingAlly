<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:src="@drawable/background"
        android:scaleType="centerCrop" >
    </ImageView>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/monserratbold"
        android:text="CookingAlly"
        android:textSize="36sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_marginTop="155dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/harabara"
                android:gravity="center_horizontal"
                android:text="Recipe"
                android:textSize="24sp"
                />

            <TextView
                android:id="@+id/nameRecipe"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/monserratbold"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="470dp"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/salvia"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="156dp"
                        android:fontFamily="@font/harabara"
                        android:gravity="center_horizontal"
                        android:text="Ingredients:"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ingredientsRecipe"
                        android:layout_marginTop="178dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/monserrat"
                        android:padding="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="238dp"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*">

                        <TableRow>
                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="90dp"
                                android:layout_height="24dp"
                                android:fontFamily="@font/harabara"
                                android:gravity="center_horizontal"
                                android:text="Minutes:"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/minutesRecipe"
                                android:layout_width="200dp"
                                android:layout_height="24dp"
                                android:fontFamily="@font/monserrat"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"/>
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="90dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/harabara"
                                android:gravity="center_horizontal"
                                android:text="Level:"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/levelRecipe"
                                android:layout_width="200dp"
                                android:layout_marginTop="8dp"
                                android:layout_height="24dp"
                                android:fontFamily="@font/monserrat"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="90dp"
                                android:layout_marginTop="8dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/harabara"
                                android:gravity="center_horizontal"
                                android:text="Procedure:"
                                android:textSize="18sp" />

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/procedureRecipe"
                                    android:layout_width="200dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/monserrat"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp" />

                            </ScrollView>
                        </TableRow>

                    </TableLayout>

                    <ImageView
                        android:id="@+id/IdImageRecipe"
                        android:layout_width="200dp"
                        android:layout_height="124dp"
                        android:layout_gravity="top|center_horizontal"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/goBackButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go Back" />


                </androidx.cardview.widget.CardView>

            </FrameLayout>



        </LinearLayout>

</FrameLayout>

